<Page::Header @title="Customers" />
<Page::Content>
  <div class="d-flex justify-content-between align-content-center mb-3 form-inline">
    <h5 class="card-title">
      {{this.sortedCustomers.length}} Results
    </h5>
    <div>
      <input type="text" class="form-control rounded" placeholder="🔍 Search Keywords"
      {{on "change" this.searchByKeyword}}/>
    </div>
    <div>
      <select class="form-control" {{on "change" this.updateSortProperty}}>
        <option value="lastName" selected={{eq this.sortProperty "lastName"}}>
          Sort by name
        </option>
        <option value="budget:desc" selected={{eq this.sortProperty "budget:desc"}}>
          Sort by budget (descending)
        </option>
        <option value="company" selected={{eq this.sortProperty "company"}}>
          Sort by company
        </option>
      </select>
    </div>
  </div>
  <div class="card">
    {{#if this.keyword}}
      <CustomersTable @model={{this.filteredCustomers}} />
    {{else}}
      <CustomersTable @model={{this.sortedCustomers}} />
    {{/if}}
  </div>
</Page::Content>